<%= link_to portfolio_item_show_path(portfolio_item) do %>
  <h2><%= portfolio_item.title %></h2>
<% end %>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
<%= link_to 'Edit Item', edit_portfolio_item_path(portfolio_item)  if logged_in?(:site_admin) %>
<%= link_to 'Delete Item', portfolio_item_path(portfolio_item), method: :delete, data: {confirm: 'Are you sure?'}  if logged_in?(:site_admin) %>
